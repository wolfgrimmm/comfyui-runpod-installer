        function getRunPodUrl(port) {
            const currentUrl = window.location.href;
            
            if (currentUrl.includes('proxy.runpod.net')) {
                const matches = currentUrl.match(/https:\/\/([^-]+)-\d+\.proxy\.runpod\.net/);
