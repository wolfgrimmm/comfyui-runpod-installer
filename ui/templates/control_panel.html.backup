        /* Button Glass Reflection */
        .btn-primary::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 50%;
            background: linear-gradient(180deg, 
                rgba(255, 255, 255, 0.3) 0%, 
                rgba(255, 255, 255, 0.15) 50%, 
                transparent 100%);
            border-radius: 20px 20px 0 0;
            pointer-events: none;
            z-index: 1;
        }

        /* Button Glass Shine */
        .btn-primary::after {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: conic-gradient(from 0deg, 
                transparent 0deg, 
                rgba(255, 255, 255, 0.2) 45deg, 
                rgba(255, 255, 255, 0.4) 90deg, 
                transparent 135deg, 
                transparent 360deg);
