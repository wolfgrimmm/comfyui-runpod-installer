            height: 700px;
            background: radial-gradient(circle, rgba(255, 100, 0, 0.3) 0%, rgba(255, 100, 0, 0.1) 50%, transparent 100%);
            bottom: -300px;
            left: 30%;
            animation-delay: 4s;
        }

        .orb-4 {
            width: 400px;
            height: 400px;
            background: radial-gradient(circle, rgba(150, 0, 255, 0.4) 0%, rgba(150, 0, 255, 0.1) 50%, transparent 100%);
            top: 20%;
            left: 60%;
            animation-delay: 6s;
        }

        @keyframes float {
            0%, 100% { transform: translate(0, 0) scale(1); }
            25% { transform: translate(30px, -20px) scale(1.1); }
            50% { transform: translate(-20px, 30px) scale(0.9); }
