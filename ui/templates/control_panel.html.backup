        /* Dramatic Background Gradients */
        .dramatic-bg {
            position: fixed;
            inset: 0;
            z-index: 0;
            pointer-events: none;
            overflow: hidden;
        }

        .gradient-orb {
            position: absolute;
            border-radius: 50%;
            filter: blur(100px);
            animation: float 8s ease-in-out infinite;
        }

        .orb-1 {
            width: 600px;
            height: 600px;
            background: radial-gradient(circle, rgba(255, 0, 100, 0.4) 0%, rgba(255, 0, 100, 0.1) 50%, transparent 100%);
